@page
@model _17bang.Pages.RegisterModel
@using _17bang.Pages.Entity
@using _17bang.Pages.AddTagHelper;
@using _17bang.Pages.ViewModel;
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center" action="/Register?id=10">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div>
    <form method="post" >
        <div>
            <label>邀请人：（* 必填，没有邀请人）</label>
            <input type="text" name="InviterName" />
        </div>
        <div>
            <label>邀请码：（* 必填）</label>
            <input type="text" name="InviterVerificationCode" />
        </div>
        <div>
            <label>用户名：（* 必填）</label>
            <input asp-for="@Model.Register.Name" />
            <span asp-validation-for="@Model.Register.Name"></span>
        </div>
        <div>
            <label>密码：（* 必填）</label>
            <input asp-for="@Model.Register.Password" />
            <span asp-validation-for="@Model.Register.Password"></span>
        </div>
        <div>
            <label>验证密码：（* 必填）</label>
            <input asp-for="@Model.Register.ConfirmPassword" />
            <span asp-validation-for="@Model.Register.ConfirmPassword"></span>
        </div>
        <div>
            <label>验证码：（* 必填） </label> 
            <div>
                <input type="text" />
                <img src="~/Image/一起帮logo.jpg" asp-append-version="true" />
            </div>
         </div>
        <button type="submit">提交</button>
        <button type="reset">重置</button>
        <a   asp-page="/Log/On">登录</a>
    </form>
</div>